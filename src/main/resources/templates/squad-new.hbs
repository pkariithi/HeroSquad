{{#partial "content"}}
    <div id="main">
        <section class="main">
            <h2>New Squad</h2>
            <form method="post" action="">
                <div class="row gtr-uniform">
                    <div class="col-6 col-12-small">
                        <label for="name">Squad's Name *</label>
                        <input type="text" name="name" id="name" placeholder="Name" required>
                    </div>
                    <div class="col-6 col-12-small">
                        <label for="size">Squad's Size *</label>
                        <input type="number" name="size" id="size" placeholder="Maximum heroes in the squad" min="0" required>
                    </div>
                    <div class="col-12">
                        <label for="cause">Squad's Cause *</label>
                        <textarea name="cause" id="cause" placeholder="What does this squad fight for?" rows="6" required></textarea>
                    </div>
                    <div class="col-12">
                        <ul class="actions">
                            <li><input type="submit" value="Save Squad" class="primary"></li>
                            <li><input type="reset" value="Reset"></li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>
{{/partial}}

{{> layout.hbs}}
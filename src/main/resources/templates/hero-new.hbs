{{#partial "content"}}
    <div id="main">
        <section class="main">
            <h2>New Hero</h2>
            <form method="post" action="">
                <div class="row gtr-uniform">
                    <div class="col-6 col-12-small">
                        <label for="name">Hero's Name *</label>
                        <input type="text" name="name" id="name" placeholder="Name" required>
                    </div>
                    <div class="col-6 col-12-small">
                        <label for="age">Hero's Age *</label>
                        <input type="number" name="age" id="age" placeholder="Age" min="1" max="100" required>
                    </div>
                    <div class="col-12">
                        <label for="power">Hero's Power *</label>
                        <textarea name="power" id="power" placeholder="Enter the hero's power(s)" rows="6" required></textarea>
                    </div>
                    <div class="col-12">
                        <label for="weakness">Hero's Weakness *</label>
                        <textarea name="weakness" id="weakness" placeholder="Enter the hero's weakness(es)" rows="6" required></textarea>
                    </div>
                    <div class="col-12">
                        <ul class="actions">
                            <li><input type="submit" value="Save Hero" class="primary"></li>
                            <li><input type="reset" value="Reset"></li>
                        </ul>
                    </div>
                </div>
            </form>
        </section>
    </div>
{{/partial}}

{{> layout.hbs}}